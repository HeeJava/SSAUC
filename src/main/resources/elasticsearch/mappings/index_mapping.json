{
  "settings": {
    "analysis": {
      "tokenizer": {
        "edge_ngram_tokenizer": {
          "type": "edge_ngram",
          "min_gram": 1,
          "max_gram": 10,
          "token_chars": ["letter", "digit"]
        }
      },
      "analyzer": {
        "korean_analyzer": {
          "type": "custom",
          "tokenizer": "nori_tokenizer"
        },
        "edge_ngram_analyzer": {
          "type": "custom",
          "tokenizer": "edge_ngram_tokenizer"
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "name": {
        "type": "text",
        "analyzer": "korean_analyzer",
        "fields": {
          "ngram": {
            "type": "text",
            "analyzer": "edge_ngram_analyzer"
          }
        }
      },
      "category": {
        "type": "text",
        "analyzer": "korean_analyzer"
      },
      "suggest": {
        "type": "completion"
      },
      "viewCount": {
        "type": "integer"
      },
      "productId": {
        "type": "keyword"
      },
      "userId": {
        "type": "keyword"
      },
      "keyword": {
        "type": "text",
        "analyzer": "standard"
      },
      "searchedAt": {
        "type": "date",
        "format": "yyyy-MM-dd'T'HH:mm:ss||strict_date_optional_time"
      }
    }
  }
}
